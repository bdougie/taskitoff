<%= render 'pages/home' unless user_signed_in? %>

<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">
  	My List
  </div>
	  <!-- Table -->
	  <table class="table">
	    <% @todos.each do |todo| %>
	    <div class="row">
	    	<%= todo.name %>
	    	<div class="row">
	    		<%= todo.description %>
	    			<div class="row">
	    				Posted: <%= time_ago_in_words(todo.created_at) %> ago
	    			</div>
	    	</div>
	    </div>
	  </table>
		<% end %>
	<br/>
	<div class="pull-right" >
	<%= link_to "Add a Task", new_todo_path, class: 'btn btn-primary btn-large' %>
	</div>
</div>