<%= render 'pages/home' unless user_signed_in? %>

<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">
  	My List
  </div>
	  <!-- Table -->
	  <table class="table">
	    <% @todos.each do |todo| %>
	    <div class="row">
	    	<tr><%= todo.name %></tr>
    		<tr><%= todo.description %></tr>
    		<tr>todo.created_at</tr>
	    </div>
	  </table>
		<% end %>
	<br/>
	<div class="pull-right" >
	<%= link_to "Add a Task", new_todo_path, class: 'btn btn-primary btn-large' %>
	</div>
</div>